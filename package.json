{
  "name": "simple-transcriptor",
  "version": "1.0.0",
  "description": "Simple audio/video transcription service using AssemblyAI",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "watch": "tsx watch src/server.ts",
    "tunnel": "npx bore-cli 3000",
    "build-frontend": "cd frontend && npm run build",
    "build-all": "npm run build-frontend && npm run build",
    "start-all": "npm run build-frontend && npm run dev"
  },
  "keywords": [
    "transcription",
    "assemblyai",
    "express",
    "typescript",
    "audio",
    "video"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "assemblyai": "^4.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
